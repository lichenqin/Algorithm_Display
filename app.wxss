.container {
  background-color: #eee;
  height: 100vh;
  
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

/*以下均为链表所需格式*/
.displayArea-style {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.entirety-style {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.node-style {
  display: flex;
  align-items: center;
  justify-content: center;
  
  background: green;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
}

.arrow-style {
  width: 80rpx;
  height: 80rpx;
}

.button-style {
  width: 80%;
  background-color: #6eb;
  color: white;
}

.button-view {
  height:300rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/*链表代码页所需格式*/
.linkListCoding-style {
  font-size: 36rpx;
}

.link_head{
  height:5vh;
  width: 100vw;
}

.link_flex{
  font-size:smaller;
  display: flex;
  justify-content: space-around;
}

.link_left{
  background-color: #fff;
  height:100vh;
  width: 5vw;
}

.link_middle{
  background-color: #fff;
  height: 100vh;
  width: 90vw;
}

.link_right{
  background-color: #fff;
  height: 100vh;
  width:5vw;
}

/*以下为排序界面所需格式*/
.sort_container{
  background-color: #fff;
  height: 20vh;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
   align-items: flex-end;
  justify-content: space-around; 
}

.sort_canvaStyle{
  background-color:#eee;
  width: 750rpx;
  height: 60vh; 
}

.sliderStyle{
  width: 90vw;
  position:absolute;
  top:65vh;
  left: 5vw;
}

.sliderContainer{
  height: 5vh;
  width: 100vw;
}

.sortFont{
  font-size: 20rpx;
  color: #000;
  position: absolute;
  left:25vw;
  top: 95vh;
}

/* 以下为sort讲解界面所需格式 */

.explain_title{
  font-size:smaller;
  font-weight: bold;
  font-style: normal;
}

.explain_head{
  height:5vh;
  width: 100vw;
}

.explain_flex{
  font-size:smaller;
  display: flex;
  justify-content: space-around;
}

.explain_text_strong{
  font-weight: bold;
}

.explain_code_style{
  font-size: smaller;
}

.explain_left{
  background-color: #fff;
  height:300vh;
  width: 5vw;
}

.explain_middle{
  background-color: #fff;
  height: 300vh;
  width: 90vw;
}

.explain_right{
  background-color: #fff;
  height: 300vh;
  width:5vw;
}